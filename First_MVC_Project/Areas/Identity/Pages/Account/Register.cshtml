@page
@model RegisterModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-warning text-white text-center py-3">
                    <h2 class="h4 m-0">Register</h2>
                </div>
                <div class="card-body p-4">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Input.FirstName" class="form-control" autocomplete="new-password" aria-required="true" placeholder="First Name" />
                                    <label asp-for="Input.FirstName">First Name</label>
                                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Input.LastName" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Last Name" />
                                    <label asp-for="Input.LastName">Last Name</label>
                                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />
                                    <label asp-for="Input.Password">Password</label>
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm Password" />
                                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-floating mb-3">
                            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="form-select">
                                <option disabled selected>--Select Role--</option>
                            </select>
                        </div>
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-warning">Register</button>
                    </form>
                    <hr>
                    <div class="text-center">
                        <p class="divider_text d-flex pt-3">or</p>
                        <h4>Use another service to register.</h4>
                        @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                        {
                            <div>
                                <p>
                                    There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715" class="text-warning">article</a> about setting up this ASP.NET application to support logging in via external services.
                                </p>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex justify-content-center flex-wrap">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="mb-2">
                                        <button type="submit" class="btn btn-outline-warning me-2" name="provider" value="@provider.Name" title="Register using your @provider.DisplayName account">
                                            <span class="me-1">@provider.DisplayName</span>
                                            @if (provider.Name == "Google")
                                            {
                                                <i class="fab fa-google"></i>
                                            }
                                            else if (provider.Name == "Facebook")
                                            {
                                                <i class="fab fa-facebook"></i>
                                            }
                                            else if (provider.Name == "Twitter")
                                            {
                                                <i class="fab fa-twitter"></i>
                                            }
                                            else if (provider.Name == "Microsoft")
                                            {
                                                <i class="fab fa-windows"></i>
                                            }
                                            <!-- Add more icons as needed -->
                                        </button>
                                    </form>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
